---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import SocialPill from "../icons/SocialPill.astro";
import GithubIcon from "../icons/Github.astro";
import MailIcon from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCaseIcon from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
	title="Portafolio | Jhonier Santana"
	description="Contrata a Jhonier Santana para crear tu aplicacion web. Desarrollador Full Stack."
>
	<main class="px-4">
		<SectionContainer id="top" class="py-44">
			<img
				class="rounded-full size-12"
				src="../../public/projects/jhoniers.jpg"
				alt="Jhonier Foto"
			/>
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				SOBRE MI
				<a
					href="https://www.linkedin.com/in/jhonier-yesid-santana-pedroza-457492265/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
				<span
					>Soy <span class="text-yellow-200/90"
						>Desarrollador de Software Junior</span
					> apasionado y altamente responsable, con mas de un año de dedicación
					y estudios enfocados en el desarrollo tanto Fron-End como Back-End.
					Soy del Socorro Santander y actualmente busco trabajo para ampliar
					mi experiencia
				</span>
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill
					href="https://www.linkedin.com/in/jhonier-yesid-santana-pedroza-457492265/"
				>
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/JhonierSantana">
					<GithubIcon class="size-4 md:size-6" />
					Github
				</SocialPill>
				<SocialPill href="https://github.com/JhonierSantana">
					<MailIcon class="size-4 md:size-6" />
					jhonier_2504@hotmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia" class="py-44">
			<h2 class="text 3xl font-semibold mb-6 flex gap-x-3 item-center">
				<BriefCaseIcon class="size-7" />
				Experiencia
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="portafolio" class="py-44">
			<h2 class="text 3xl font-semibold mb-6 flex gap-x-3 item-center">
				<CodeIcon class="size-7" />
				Portafolio
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
