---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
	{
		date: "Septiembre 2023 - Octubre 2023",
		title: "Sofware Developer (trainee) | Autonomic Jump",
		description:
			"Entrene en varios lenguajes de programación, incluyendo Dart, Kotlin, R, Rex, Red y Lua, con un enfoque en programacion funcional, recursión, y resolución de desafíos, y utilizando Git en entornos industriales. Experiencia en eluso de herramientas y procesos de integracion continua y entrega continua (CI/CD)",
		lin: "#",
	},
];
---

<ol class="relative border-s border-gray-200 ml-1">
	{
		EXPERIENCE.map((experience) => (
			<li
				class="
	mb-12
	ms-4"
			>
				<ExperienceItem {...experience} />
			</li>
		))
	}
</ol>
